<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/channel_layout_titlebar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/mediumseagreen" >

        <TextView
            android:id="@+id/channel_text_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="Channel Management"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/channel_button_backward"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="back"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:background="@color/mediumseagreen"
            android:visibility="visible" />

        <Button
            android:id="@+id/channel_button_forward"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="6dp"
            android:ellipsize="end"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="apply"
            android:textColor="#ffffffff"
            android:background="@color/mediumseagreen"
            android:textSize="18dp"
            android:visibility="visible" />

    </RelativeLayout>

    <TableLayout
        android:id="@+id/channel_layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/favorite_background2" >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sports"
                android:textSize="35dp"
                android:layout_weight="0.6"
                android:gravity="center"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="0.2"
                android:id="@+id/box_sports"
                android:scaleX = "1.5"
                android:scaleY = "1.5"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="top stories"
                android:textSize="35dp"
                android:layout_weight="0.6"
                android:gravity="center"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="0.2"
                android:id="@+id/box_top_stories"
                android:scaleX = "1.5"
                android:scaleY = "1.5"/>
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="technology"
            android:textSize="35dp"
            android:layout_weight="0.6"
            android:gravity="center"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/box_technology"
            android:scaleX = "1.5"
            android:scaleY = "1.5"/>
    </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="health"
            android:textSize="35dp"
            android:layout_weight="0.6"
            android:gravity="center"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/box_health"
            android:scaleX = "1.5"
            android:scaleY = "1.5"/>
    </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="world"
            android:textSize="35dp"
            android:layout_weight="0.6"
            android:gravity="center"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/box_world"
            android:scaleX = "1.5"
            android:scaleY = "1.5"/>
    </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="national"
            android:textSize="35dp"
            android:layout_weight="0.6"
            android:gravity="center"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/box_national"
            android:scaleX = "1.5"
            android:scaleY = "1.5"/>
    </TableRow>
        <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="entertainment"
            android:textSize="35dp"
            android:layout_weight="0.6"
            android:gravity="center"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.2"
            android:id="@+id/box_entertainment"
            android:scaleX = "1.5"
            android:scaleY = "1.5"/>
    </TableRow>
    </TableLayout>

</LinearLayout>